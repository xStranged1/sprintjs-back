{
  "compilerOptions": {
    "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
         "es5",
         "es6"
      ],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true 
  }
}
